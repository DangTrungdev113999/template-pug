doctype html
head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Login
    // Bootstrap CSS
    link(rel='stylesheet', href='/assets/vendor/bootstrap/css/bootstrap.min.css')
    link(href='/assets/vendor/fonts/circular-std/style.css', rel='stylesheet')
    link(rel='stylesheet', href='/assets/libs/css/style.css')
    link(rel='stylesheet', href='/assets/vendor/fonts/fontawesome/css/fontawesome-all.css')
    style.
        html,
        body {
        height: 100%;
        }
        body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        }
// ==============================================================
// login page
// ==============================================================
.splash-container
    .card
        .card-header.text-center
            a(href='../index.html')
                img.logo-img(src='/assets/images/logo.png', alt='logo')
            span.splash-description Please enter your user information.
        .card-body
            form(method="POST")
                .form-group
                    input#username.form-control.form-control-lg(type='text',name='email', placeholder='admin@gmail.com')
                .form-group
                    input#password.form-control.form-control-lg(type='password',name='password', placeholder='123')
                .form-group
                    label.custom-control.custom-checkbox
                        input.custom-control-input(type='checkbox')
                        span.custom-control-label Remember Me
                button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign in
        .card-footer.bg-white.p-0
            .card-footer-item.card-footer-item-bordered
                a.footer-link(href='#') Create An Account
            .card-footer-item.card-footer-item-bordered
                a.footer-link(href='#') Forgot Password
// ==============================================================
// end login page
// ==============================================================
// Optional JavaScript
script(src='/assets/vendor/jquery/jquery-3.3.1.min.js')
script(src='/assets/vendor/bootstrap/js/bootstrap.bundle.js')
